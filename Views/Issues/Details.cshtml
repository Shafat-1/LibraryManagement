@model Library_Management.Models.Issue
@{
    ViewData["Title"] = "Details";
}

<h1>Issue Details</h1>
<hr />
<div class="card mb-4 shadow-lg ">
    <dl class="row m-2">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Student)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Student.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BookCodes)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BookCodes.CodeNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Issue_Date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Issue_Date)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Return_Date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Return_Date)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ActualReturn_Date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ActualReturn_Date)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IsReturned)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IsReturned)
        </dd>
        
    </dl>
    <div class="m-2">
        <a class="btn btn-info btn-sm" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
        <a class="btn btn-primary btn-sm" asp-action="Index">Back to List</a>
    </div>
</div>
<div class="card shadow-lg">
    <div class="row m-2">
        <div class="col-md-6">
            <table class="table table-bordered table-hover table-sm">
                <thead class="thead-dark">
                    <tr>
                        <th>Name</th>
                        <th>Age</th>
                        <th>Department</th>
                        <th>Mobile</th>
                        <th>Email</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in ViewBag.std)
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td>@item.Age</td>
                            <td>@item.Department</td>
                            <td>@item.Mobile</td>
                            <td>@item.Email</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="col-md-6">
            <table class="table table-bordered table-hover table-sm">
                <thead class="thead-dark">
                    <tr>
                        <th>Name</th>
                        <th>Author</th>
                        <th>Edition</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in ViewBag.books)
                    {
                        <tr>
                            <td>@item.Book_Name</td>
                            <td>@item.Author</td>
                            <td>@item.Edition</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
