@model IEnumerable<Library_Management.Models.Student>

@{
    ViewData["Title"] = "Index";
}

<h1 class="alert alert-info text-center text-white" style="background-color:#252528;">Student List</h1>

<div class="mb-4 d-flex justify-content-end">
    <form asp-action="index" method="post" class="form-inline">
        <input type="text" class="form-control mr-2" name="search" value="@ViewBag.search" placeholder="Please type here to search"/>
        <button type="submit" class="btn btn-success">Search</button>
    </form>
</div>
<p>
    <a class="btn btn-primary" asp-action="Create">Create New</a>
</p>
<table class="table table-bordered table-active table-sm" >
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Student_Code)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Department)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Season)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Mobile)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.Student_Image)
            </th>*@
            @*<th>
                @Html.DisplayNameFor(model => model.Password)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Confirm_Password)
            </th>*@
            <th>
                @Html.DisplayNameFor(model => model.IsApproved)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <img src="~/images/@item.Student_Image"   
                         class="rounded-circle"   
                         height="40" width="40"   
                         asp-append-version="true" />
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Student_Code)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gender)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Department)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Season)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mobile)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            @*<td>
                <img src="~/images/@item.Student_Image"   
                         class="rounded-circle"   
                         height="40" width="40"   
                         asp-append-version="true" />*@
                @*@Html.DisplayFor(modelItem => item.Student_Image)*@
            @*</td>*@
            @*<td>
                @Html.DisplayFor(modelItem => item.Password)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Confirm_Password)
            </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.IsApproved)
            </td>
            <td>
                <a asp-action="Edit" class="btn btn-info btn-sm" asp-route-id="@item.Id"><i class="fa fa-pen"></i></a> |
                <a asp-action="Details" class="btn btn-primary btn-sm" asp-route-id="@item.Id"><i class="fa fa-list"></i></a> |
                <a asp-action="Delete" class="btn btn-danger btn-sm" asp-route-id="@item.Id"><i class="fa fa-trash"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
